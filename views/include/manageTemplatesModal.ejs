<!-- Manage templates modal -->
<div class='modal' id='manageTemplates' tabindex='-1' role='dialog' aria-labelledby='Manage templates' aria-hidden='true'>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <span id='manageTemplatesTitle'>Add new template (Please use Ctrl-Shift-V when pasting)</span>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
        <span aria-hidden='true'>&times;</span>
      </button>
      </div>
      <div class='new-template'>
        <form id='templatesForm' action='/add' method='POST' autocomplete='off' id='templatesForm'>
          <div class='row'>
            <div class='col-lg-12'>
              <div class='form-group' style='padding-right: 0px;'>
                <input type='text' class='form-control' id='name' name='name' autocomplete='off' required='true' placeholder='Template Name' maxlength='35'>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-lg-12 col-md-12">
              <input type='text' class="form-control" id='greeting' name='greeting' placeholder="Opening sentence (i.e., Thank you fo reaching out to us.)" required='false'>
            </div>
          </div>
          <div class='form-group'>
            <ul class="nav nav-pills">
              <li class="active"><a data-toggle="pill" href="#originalTab" id="versionOriginalPill">Original</a></li>
              <li>
                <a data-toggle="pill" href="#version0Tab" id="version0Pill">
                  <div class='versionTabs' spellcheck=false contenteditable="true" id="version0Title">
                    Version1
                  </div>
                </a>
              </li>
              <li>
                <a data-toggle="pill" href="#version1Tab" id="version1Pill">
                  <div class='versionTabs' spellcheck=false contenteditable="true" id="version1Title">
                    Version2
                  </div>
                </a>
              </li>
              <li>
                <a data-toggle="pill" href="#version2Tab" id="version2Pill">
                  <div class='versionTabs' spellcheck=false contenteditable="true" id="version2Title">
                    Version3
                  </div>
                </a>
              </li>
              <li>
                <a data-toggle="pill" href="#version3Tab" id="version3Pill">
                  <div class='versionTabs' spellcheck=false contenteditable="true" id="version3Title">
                    Version4
                  </div>
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div id="originalTab" class="tab-pane fade in active">
                <textarea rows='0' cols='80' id="body" class="editor" name='body'></textarea>
              </div>
              <div id="version0Tab" class="tab-pane fade">
                <div id="version0Field" rows='0' cols='80' class="editor" name='body0'></div>
              </div>
              <div id="version1Tab" class="tab-pane fade">
                <div id="version1Field" rows='0' cols='80' class="editor" name='body1'></div>
              </div>
              <div id="version2Tab" class="tab-pane fade">
                <div id="version2Field" rows='0' cols='80' class="editor" name='body2'></div>
              </div>
              <div id="version3Tab" class="tab-pane fade">
                <div id="version3Field" rows='0' cols='80' class="editor" name='body3'></div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-lg-12 col-md-12">
              <input type='text' class="form-control" id='closing' name='closing' placeholder="Closing sentence (i.e., Let me know if you have any questions.)" required='false'>
            </div>
          </div>
          <div class='row'>
            <div class='form-group col-lg-6 col-md-6'>
              <select class='form-control' id='category' name='category' required='true'>
                <option disabled selected value> --Select category-- </option>
                <% for(var m = 0; m < user.programs.length; m++) { %>
                  <% if(user.programs[m] == 'IXL'){ %>
                    <option>Analytics</option>
                    <option>Audio</option>
                    <option>Diagnostic</option>
                    <option>Network</option>
                    <option>Roster</option>
                    <option>Skills</option>
                    <option>Signing In</option>
                    <option>SmartScore</option>
                    <option>Other</option>
                  <% } %>
                  <% if(user.programs[m] == 'QW'){ %>
                    <option disabled>&mdash;&mdash;&mdash;&mdash;</option>
                    <option>Activities</option>
                    <option>Reports</option>
                    <option>Classes</option>
                    <option>Quizzes</option>
                    <option>Surveys</option>
                  <% } %>
                  <% if(user.programs[m] == 'CSE'){ %>
                    <option disabled>&mdash;&mdash;&mdash;&mdash;</option>
                    <option>SSO</option>
                    <option>Auto Rostering</option>
                  <% } %>
                  <% if(user.programs[m] == 'FAM'){ %>
                    <option disabled>&mdash;&mdash;&mdash;&mdash;</option>
                    <option>Quote</option>
                    <option>Cancel</option>
                    <option>Refund</option>
                  <% } %>
                  <% if(user.programs[m] == 'QB'){ %>
                    <option disabled>&mdash;&mdash;&mdash;&mdash;</option>
                    <option>Keys</option>
                    <option>Courses</option>
                    <option>Grading</option>
                    <option>Media</option>
                  <% } %>
                  <% } %>
              </select>
            </div>
            <div class='form-group col-lg-6 col-md-6'>
              <select class='form-control' id='program' name='program' required='true'>
                <option disabled selected value> --Select program-- </option>
                <% for(var m = 0; m < user.programs.length; m++) { %>
                  <% if(user.programs[m] == 'IXL' && user.team != 'family'){ %>
                    <option>IXL</option>
                  <% } %>
                  <% if(user.programs[m] == 'QW'){ %>
                    <option>QW</option>
                  <% } %>
                  <% if(user.programs[m] == 'QB'){ %>
                    <option>QB</option>
                  <% } %>
                  <% if(user.programs[m] == 'FAM'){ %>
                    <option>FAM</option>
                  <% } %>
                  <% if(user.programs[m] == 'CSE'){ %>
                    <option>CSE</option>
                  <% } %>
                  <% } %>
              </select>
            </div>
            <div class='form-group'>
              <input type='hidden' class='form-control' id='id' name='id' required='true'>
              <input type='hidden' id='updatedDate' name='updatedDate' value='error'>
              <input type='hidden' id='addedByUser' name='addedByUser' value='<%= user.email %>'>
              <input type='hidden' id='ranking' name='ranking' value=0>
              <input type='hidden' id='copyFull' name='copyFull' value=0>
              <input type='hidden' id='copyPortion' name='copyPortion' value=0>
              <input type='hidden' id='team' name='team' value='<%= user.team %>'>
            </div>
          </div>
          <div class="row">
            <% if (user.type == 'admin') { %>
              <div class="form-group col-lg-6 col-md-6">
                <select class='form-control' id='publicStatus' name='publicStatus' required='true'>
                  <option disabled selected value> --Select public status-- </option>
                  <option>true</option>
                  <option>false</option>
                </select>
              </div>
              <% } else { %>
                <input type='hidden' id='publicStatus' name='publicStatus' value='false'>
                <% } %>
                  <div class='form-group col-lg-6 col-md-6'>
                    <input type='text' class='form-control' id='replyEmail' autocomplete='off' name='replyEmail' required='true' placeholder='Signature E-mail'>
                  </div>
          </div>
          <div class="row">
            <div class='form-group col-lg-12 col-md-12'>
              <input type='text' class='form-control' id='tags' name='tags' required='true' placeholder='Tags' maxlength='45'>
            </div>
          </div>
          <button type='submit' class='btn btn-primary' id='submitBtn'>Submit</button>
      </div>
      </form>
    </div>
  </div>
</div>
<!-- End manage templates modal -->